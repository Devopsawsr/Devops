pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Define path') {
            steps {
                script {
                    def playbookPath = "/var/lib/jenkins/workspace/${JOB_NAME}/Ansible/Dev/APP/app_deployment.yml"
                    def inventoryPath = "/var/lib/jenkins/workspace/${JOB_NAME}/Ansible/Dev/inventory.ini"
                }
            }
        }
        stage('Deploying') {
            steps {
                sh '''          
                sudo -u ansible ansible-playbook -i ${inventoryPath} ${playbookPath} -vvv
                '''
                }
            }
        }
    post {
        success {
            echo "Ansible playbook executed successfully"
        }
        failure {
            echo "Ansible playbook execution failed"
        }
    }
}
